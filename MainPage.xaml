<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CycleInstructor.MainPage">

    <!-- create a flexlayout -->
    <!-- with a block in it to select a file -->
    <!-- with a block in it that contains an mp3 player -->

    <FlexLayout Direction="Column" JustifyContent="Center" AlignItems="Center">
        <Label 
            x:Name="FileNameLabel"
            Text="..." />

        <Button 
            x:Name="SelectFileBtn"
            Text="Select a file" 
            SemanticProperties.Hint="Select a file to play"
            Clicked="OnSelectFileClicked"
            HorizontalOptions="Fill" />

        <Label 
            x:Name="AudioPlayer"
            Text="AudioPlayerLabel" />

        <!--<Button Text="Play" Clicked="PlayButton_Clicked" />
        <Button Text="Pause" Clicked="PauseButton_Clicked" />
        <Button Text="Stop" Clicked="StopButton_Clicked" />-->
    </FlexLayout>


</ContentPage>
